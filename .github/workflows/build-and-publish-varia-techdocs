name: Build TechDocs

on:
  push:
    branches:
      - main
      - docs/backstage-add-mkdocs
      - varia-makefile

jobs:
  techdocs:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: "20"

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.13"

      - name: Install uv
        uses: astral-sh/setup-uv@v6

      - name: Install techdocs-cli
        run: npm install -g @techdocs/cli

      - name: "Az login"
        uses: azure/login@v2
        with:
          client-id: 1fee4604-0e5f-4b2a-9481-e466bbec1cea
          tenant-id: 3aa4a235-b6e2-48d5-9195-7fcf05b459b0
          subscription-id: 16ede44b-1f74-40a5-b428-46cca9a5741b

      - name: Pre-processing for MkDocs
        working-directory: ./public-site
        run: uv run ./scripts/mkdocs-preprocess.sh

      - name: Generate docs site
        working-directory: ./public-site
        run: uv run techdocs-cli generate --no-docker

      - name: Publish to blob storage
        working-directory: ./public-site
        run: |
          uv run techdocs-cli publish \
            --publisher-type azureBlobStorage \
            --azureAccountName $STORAGE_ACCOUNT_NAME \
            --azureAccountKey $STORAGE_ACCOUNT_KEY \
            --storage-name techdocs \
            --entity default/system/radix

      - name: Publish to blob storage
        env:
          STORAGE_ACCOUNT_NAME: variatdstprod
          BACKSTAGE_ENTITY_KIND: system
          BACKSTAGE_ENTITY_NAME: radix
        run: |
          az storage blob upload-batch \
            --account-name ${STORAGE_ACCOUNT_NAME} \
            --auth-mode login \
            --source site \
            --destination techdocs/default/${BACKSTAGE_ENTITY_KIND}/${BACKSTAGE_ENTITY_NAME} \
            --overwrite true
