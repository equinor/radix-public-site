set $script_src_prod_sha "'sha256-yjJ797QQq/UCxCa++V+5HS+UIQopKNOYVrgkv/NZ0B8=' 'sha256-VSjX2aDQTt9NLoldfwitmTdwi/Q1Ul2H+D/aNhI0EuM='";
